generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model eventgroup {
  id             Int     @id @default(autoincrement())
  name           String? @unique
  master_address String?
  events         event[]
}

model event {
  id    Int        @id @default(autoincrement())
  event eventgroup @relation(fields: [id], references: [id])
  name  String?
}

model user {
  id Int @id @default(autoincrement())
  name String? @unique
  address String? @unique
  pass String?
}
